{
  "version": 1,
  "hooks": {
    "afterFileEdit": [
      {
        "command": ".cursor/hooks/format-python.sh",
        "timeout": 10,
        "type": "command",
        "matcher": "**/*.py"
      },
      {
        "command": ".cursor/hooks/format-ts.sh",
        "timeout": 10,
        "type": "command",
        "matcher": "**/*.{ts,tsx}"
      }
    ]
  }
}
